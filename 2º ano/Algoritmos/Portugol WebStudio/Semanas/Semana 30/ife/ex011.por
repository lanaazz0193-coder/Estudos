//Ana Lívia
programa {

  real a, aa, am
  funcao inicio() {

    escreva("Digite a quantidade de dias sem acidentes: ")
    leia(a)

    aa = a / 365
    am = a / 30

    escreva("São ", aa, " anos sem acidentes.")
    escreva("\nSão ", am, " meses sem acidentes.")
    escreva("\nSão ", a, " dias sem acidentes.")
    
  }
}
