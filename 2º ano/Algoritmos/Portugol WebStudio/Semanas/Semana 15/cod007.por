programa {

    real nota_1, nota_2, media


  funcao inicio() {
  
    escreva("Digite a primeira nota: ", nota_1) //Espere o usuário digitar
    leia(nota_1)
    escreva("Digite a segunda nota: ", nota_2) //Espere o usuário digitar
